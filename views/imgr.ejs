<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/home.css">
    <!-- <link rel="stylesheet" href="../stylesheets/loco.css"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
  <style>
       #main{
        
            background-color: #313030;
            height: 100%;
       }
       .contant{
           display: flex;
           flex-direction: column;
            align-items: center;
            justify-content: center;
          background-color: #313030;
          height: 100%;
          width: 100%;
       }
      .right_contant{
        width: 60%;
        height: 80%;
        background-color: red;
      }
      .right_contant img{
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top;
      }
      #hnav{
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 2vw;
        width: 100%;
      }
      #hnav .l{
        display: flex !important;
        align-items: center;
        justify-content: center;
      }
      #hnav .l h5{
        margin-top: 5px;
         font-family: gilroy;
         font-size: 15px;
         color: #fff;
      }
      i{
        color: #fff;
        margin-right: 10px;
        font-size: 20px;
        font-weight: 100;
      }
      .fimg video{
        background-position: center;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .right_contant img {
        width: 100% !important;
        height: 100% !important;
        object-fit: scale-down !important;
      }
  </style>
<body>
    <div id="main">
        
        <div class="contant">
            <div id="hnav">
                 <div class="l">
                     <a href="/back"><i class="ri-arrow-left-line"></i></a>
                     <h5><%= folder.picName %></h5>
                     
                 </div>
                 <div class="r">
                    <i class="ri-chat-new-line"></i>
                    <i class="ri-printer-line"></i>
                    <i class="ri-download-2-line"></i>
                    <i class="ri-more-2-fill"></i>
                 </div>
            </div>
            <div class="right_contant">
                <% if(folder.ext === "jpg"){ %>
                    <div style=" width: 100% !important;
                    height: 100% !important;
                    object-fit: scale-down !important; background-color: #fff;" class="fimg">
                        <a href="#">
                            <img src="<%= folder.pic %>" alt="">
                        </a>
                    </div>
                <% } %>
                <% if(folder.ext === "txt"){ %>
                    <div class="fimg">
                        <a href="#">
                            <iframe src="<%= folder.pic %>" frameborder="0"></iframe>
                        </a>
                    </div>
                <% } %>
                <% if(folder.ext === "pdf"){ %>
                    <div class="fimg">
                        <a href="#">
                            <object data="<%= folder.pic %>" type="application/pdf" width="100%" height="500px">
                        </a>
                    </div>
                <% } %>
                <% if(folder.ext === "mp4"){ %>
                    <div class="fimg">
                        <a href="#">
                            <video autoplay muted loop src="<%= folder.pic %>"></video>
                        </a>
                    </div>
                <% } %>
                </div>
            </div>
          

        </div>
       
       
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
        
        <script src="../javascripts/script.js"></script>
</body>

</html>