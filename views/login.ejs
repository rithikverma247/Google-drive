              <button type="submit" class="btn btn-primary">
                   <h6>Login</h6>
              </button>
            </form>
            <a href="/sign">
              <div class="sg">
                 Sign in With Google
              </div>
           </a>
          
           <a href="/sign">
               Frogot password
           </a>
